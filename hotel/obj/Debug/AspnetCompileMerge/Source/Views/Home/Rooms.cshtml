@model hotel.Models.RoomsViewModel
@{
    ViewBag.Title = "Rooms";
}

<main>

    <!-- slider Area Start-->
    <div class="slider-area">
        <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="/img/hero/roomspage_hero.jpg">
            <div class="container">
                <div class="row ">
                    <div class="col-md-11 offset-xl-1 offset-lg-1 offset-md-1">
                        <div class="hero-caption">
                            <span>@ViewBag.Title</span>
                            <h2>Our @ViewBag.Title</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Room Start -->
    @{
        Html.RenderPartial("~/Views/Shared/_cardRooms.cshtml", Model.ListRoomCard);
    }
    <!-- Room End -->
    <!-- Gallery img Start-->
    @{
        Html.RenderPartial("~/Views/Shared/_slider.cshtml", Model.RoomSlider);
    }
    <!-- Gallery img End-->
</main>

