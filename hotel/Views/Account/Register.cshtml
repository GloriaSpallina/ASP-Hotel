@model Hotel.Models.ClientModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whole-wrap">
    <div class="container box_1170">
        <div class="section-top-border">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <form action="/Account/Register" method="post">
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mt-10">
                            @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Name" } })
                            @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">
                            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Last name" } })
                            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                        </div>


                        <div class="mt-10">
                            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Login" } })
                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">

                            @Html.EditorFor(model => model.MotDePasse, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Password", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">

                            @Html.EditorFor(model => model.ConfirmMotDePasse, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Confirm Password", @type ="password" } })
                            @Html.ValidationMessageFor(model => model.ConfirmMotDePasse, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">

                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">

                            @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Phone" } })
                            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })

                        </div>
                        <div class="mt-10">

                            @Html.EditorFor(model => model.Rue, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Street" } })
                            @Html.ValidationMessageFor(model => model.Rue, "", new { @class = "text-danger" })

                        </div>
                        <div class="mt-10">

                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "N°" } })
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })

                        </div>
                        <div class="mt-10">

                            @Html.EditorFor(model => model.Ville, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "City" } })
                            @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">

                            @Html.EditorFor(model => model.Pays, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Country" } })
                            @Html.ValidationMessageFor(model => model.Pays, "", new { @class = "text-danger" })

                        </div>





                        <div class="mt-10">

                            @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "single-input-secondary", @placeholder = "Photo" } })
                            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })

                        </div>

                        <div class="mt-10">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="button button-contactForm boxed-btn" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
</div>