@model hotel.Models.LoginRegisterModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="whole-wrap">
    <div class="container box_1170">
        <div class="section-top-border">
            <div class="text-center">
                <h3 class="mb-30">Login</h3>
            </div>


            <form action="/Account/Login" method="post">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        @Html.AntiForgeryToken()
                        <div class="mt-10">
                            <input type="text" name="Login" class="single-input-secondary form-control-lg" placeholder="Username">
                            @Html.ValidationMessageFor(model => model.LoginModel.Login, "", new { @class = "text-danger" })
                        </div>

                        <div class="mt-10">
                            <input type="password" name="MotDePasse" class="single-input-secondary form-control-lg" placeholder="Password">
                            @Html.ValidationMessageFor(model => model.LoginModel.MotDePasse, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="text-right">
                    <input type="submit" name="btn" value="Connectez-vous" class="button button-contactForm boxed-btn">
                    @ViewBag.Error
                </div>

            </form>


            <hr />

            <div class="text-center">
                <h3 class="mb-30">OR REGISTER</h3>
            </div>
            <div class="card-body">
                <form action="/Account/Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mt-10">

                        <input type="text" name="Prenom" class="single-input-secondary form-control-lg" placeholder="First Name">
                        @Html.ValidationMessageFor(model => model.ClientModel.Prenom, "", new { @class = "text-danger" })
                    </div>
                    <div class="mt-10">

                        <input type="text" name="Nom" class="single-input-secondary form-control-lg" placeholder="Last Name">
                        @Html.ValidationMessageFor(model => model.ClientModel.Nom, "", new { @class = "text-danger" })
                    </div>


                    <div class="mt-10">
                        <input type="text" name="Login" class="single-input-secondary form-control-lg" placeholder="Username">
                        @Html.ValidationMessageFor(model => model.ClientModel.Login, "", new { @class = "text-danger" })
                    </div>

                    <div class="mt-10">
                        <input type="password" name="MotDePasse" class="single-input-secondary form-control-lg" placeholder="Password">
                        @Html.ValidationMessageFor(model => model.ClientModel.MotDePasse, "", new { @class = "text-danger" })
                    </div>
                    <div class="mt-10">
                        <input type="password" name="ConfirmMotDePasse" class="single-input-secondary form-control-lg" placeholder="Confirm Password">
                        @Html.ValidationMessageFor(model => model.ClientModel.ConfirmMotDePasse, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="text-right">
                        <input type="submit" name="btn" value="Connectez-vous" class="button button-contactForm boxed-btn">
                    </div>
                    @ViewBag.Error
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
            </div>
        </div>

