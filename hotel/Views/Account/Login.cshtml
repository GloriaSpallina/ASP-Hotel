@model hotel.Models.LoginRegisterModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card card-login mx-auto text-center">
        <div class="card-header mx-auto">
            <h1 class="login-title">Login</h1><br />

        </div>
        <div class="card-body">
            <form action="/Account/Login" method="post">
                @Html.AntiForgeryToken()
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                    </div>
                    <input type="text" name="Login" class="form-control text-box single-line" placeholder="Username">
                    @Html.ValidationMessageFor(model => model.LoginModel.Login, "", new { @class = "text-danger" })
                </div>

                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                    </div>
                    <input type="password" name="MotDePasse" class="form-control text-box single-line" placeholder="Password">
                    @Html.ValidationMessageFor(model => model.LoginModel.MotDePasse, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" name="btn" value="Connectez-vous" class="btn btn-outline-danger float-right login_btn">

                    @ViewBag.Error
                </div>

            </form>

        </div>
        <hr />
        <h2>OU</h2>
        <hr />
        <div class="card-header mx-auto">
            <h1 class="login-title">

                Enregistrez-vous
            </h1><br />

        </div>
        <div class="card-body">
            <form action="/Account/Register" method="post">
                @Html.AntiForgeryToken()
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-pencil"></i></span>
                    </div>
                    <input type="text" name="Prenom" class="form-control text-box single-line" placeholder="First Name">
                    @Html.ValidationMessageFor(model => model.ClientModel.Prenom, "", new { @class = "text-danger" })
                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-pencil"></i></span>
                    </div>
                    <input type="text" name="Nom" class="form-control text-box single-line" placeholder="Last Name">
                    @Html.ValidationMessageFor(model => model.ClientModel.Nom, "", new { @class = "text-danger" })
                </div>


                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                    </div>
                    <input type="text" name="Login" class="form-control text-box single-line" placeholder="Username">
                    @Html.ValidationMessageFor(model => model.ClientModel.Login, "", new { @class = "text-danger" })
                </div>

                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                    </div>
                    <input type="password" name="MotDePasse" class="form-control text-box single-line" placeholder="Password">
                    @Html.ValidationMessageFor(model => model.ClientModel.MotDePasse, "", new { @class = "text-danger" })
                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
                    </div>
                    <input type="password" name="ConfirmMotDePasse" class="form-control text-box single-line" placeholder="Confirm Password">
                    @Html.ValidationMessageFor(model => model.ClientModel.ConfirmMotDePasse, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    <input type="submit" name="btn" value="Connectez-vous" class="btn btn-outline-danger float-right login_btn">


                </div>
                @ViewBag.Error
            </form>
        </div>
    </div>

</div>
