<section class="room-area r-padding1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <!--font-back-tittle  -->
                <div class="font-back-tittle mb-45">
                    <div class="archivment-front">
                        <h3>Our Rooms</h3>
                    </div>
                    <h3 class="archivment-back">Our Rooms</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (hotel.Models.RoomCardModel item in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <!-- Single Room -->
                    <div class="single-room mb-50">
                        <div class="room-img">
                            <a href="/Home/Rooms"> <img src="/img/rooms/@item.PhotoChambre" alt=""></a>
                        </div>
                        <div class="room-caption">
                            <h3><a href="/Home/Rooms">@item.NomCatégorie</a></h3>
                            <div class="per-night">
                                <span><u>$</u>@item.Prix <span>/ par night</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row justify-content-center">
            <div class="room-btn pt-70">
                <a href="#" class="btn view-btn1">View more  <i class="ti-angle-right"></i> </a>
            </div>
        </div>
    </div>

</section>
