<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">Category</h4>
    <ul class="list cat-list">
        @using (Html.BeginForm("Blog", "Home", FormMethod.Get))
        {

            foreach (hotel.Models.CategorieModel item in Model)
            {

                <li>

                    @Html.ActionLink(@item.Nom, "Blog", new { searchTheme = @item.Nom }) (@item.NombreArticleCategorie)
                </li>

               
            }
        }

    </ul>
</aside>


